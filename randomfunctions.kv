<Container>:
    rows: 2
    padding: 5

    label: SimpleLabel
    bHeadsOrTails: HeadsOrTails
    bRandomCar: RandomCar
    bTime: Time
    bIP: InternetProtocol

    Label:
        id: SimpleLabel
        text: 'None'
        size_hint: 1, 0.3
        font_size: 40
        color: 0, 0, 0, 1 # Цвет текста
        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.5 # Background-color
            Rectangle:
                pos: self.pos
                size: self.size

    FloatLayout:
        Button:
            id: InternetProtocol
            size_hint: 1, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.721}
            font_size: 40
            text: 'IP'
            
            on_release:
                root.outputCurlInternetProtocol()

        Button:
            id: HeadsOrTails
            size_hint: 1, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.514}
            font_size: 40
            text: 'HeadsOrTails'

            on_release:
                root.outputHeadsOrTails()

        Button:
            id: RandomCar
            size_hint: 1, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.307}
            font_size: 40
            text: 'RandomCar'

            on_release:
                root.outputRandomCar()

        Button:
            id: Time
            size_hint: 1, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            font_size: 40
            text: 'TimeAndData'

            on_release:
                root.outputTime()


<Button@Button>:
    background_color: (0, 0, 0, 0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (0, 0.7, 1, 1) if self.state == 'normal' else (0, 0.55, 1, 1)               
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [18]
